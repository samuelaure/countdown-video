{
  "name": "countdown-video",
  "version": "1.0.7",
  "author": "Samuel Aure",
  "description": "999 days countdown automation for Instagram Reels",
  "main": "src/index.jsx",
  "type": "module",
  "scripts": {
    "start": "remotion preview src/index.jsx",
    "render:video": "remotion render src/index.jsx Countdown out/video.mp4 --codec=h264 --pixel-format=yuv420p --audio-codec=aac --overwrite",
    "render:cover": "remotion still src/index.jsx Countdown out/cover.png --frame=1",
    "render": "npm run render:video && npm run render:cover",
    "publish": "node src/publish-instagram.js",
    "daily": "node src/notify-start.js && npm run render && npm run publish",
    "format": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@aws-sdk/lib-storage": "^3.985.0",
    "@remotion/google-fonts": "4.0.406",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "remotion": "4.0.406"
  },
  "devDependencies": {
    "@remotion/cli": "4.0.406",
    "@types/react": "^18.0.0",
    "prettier": "^3.7.4"
  }
}
